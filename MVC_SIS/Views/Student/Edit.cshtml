@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Edit Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.Student.StudentId)
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Student Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(c => c.Student.FirstName, null, new { @class = "error" })
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(c => c.Student.LastName, null, new { @class = "error" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(c => c.Student.Major.MajorId, null, new { @class = "error" })
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(c => c.Student.GPA, null, new { @class = "error" })
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                                    @using (Html.BeginForm())
                                    {
                                        //@Html.HiddenFor(m=>m.Student.Address.AddressId)
                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <h3 class="panel-title">Address</h3>
                                                </div>
                                                <div class="panel-body">
                                                    <label>Street 1</label>
                                                    <div class="form-group">
                                                        @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                                                    </div>
                                                    <label>Street 2</label>
                                                    <div class="form-group">
                                                        @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                                                    </div>
                                                    <label>City</label>
                                                    <div class="form-group">
                                                        @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                                                    </div>
                                                    <label>State</label>
                                                    <div class="form-group">
                                                        @Html.DropDownListFor(m => m.Student.Address.State.StateName, Model.StateItems, new { @class = "form-control" })
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Zip Code</label>
                                                        @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                                                    </div>
                                                </div>

                                            </div>
                                    }
                                                    <button class="btn btn-primary">Save</button>
                                                    @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



